<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/double_spacing"
        android:layout_marginBottom="@dimen/double_spacing"
        android:layout_marginStart="@dimen/standard_spacing"
        android:layout_marginEnd="@dimen/standard_spacing"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <include
            android:id="@+id/include2"
            layout="@layout/header_image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shapeDrawable="@{@drawable/random_shape4}"
            app:imgDrawable="@{@drawable/empty_box}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/double_spacing"
            android:text="@string/no_content_found"
            android:textSize="@dimen/text_normal"/>
    </LinearLayout>
</layout>
