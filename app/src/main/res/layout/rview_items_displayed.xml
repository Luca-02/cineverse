<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardImageViewItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/rview_image_item"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        app:cardCornerRadius="10dp"/>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cardImageViewItem"
        android:orientation="vertical"
        android:padding="4dp">

    <TextView
        android:id="@+id/rview_name_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text=""
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_minimum"
        app:layout_constraintTop_toBottomOf="@+id/rview_image_item"
         />

    <TextView
        android:id="@+id/rview_score_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="4dp"
        android:textSize="@dimen/text_minimum"
        app:layout_constraintBottom_toBottomOf="@id/rview_image_item" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>