<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.settings.fragment.section.UsernameSettingsFragment">

    <include
        layout="@layout/linear_progress_indicator_layout"
        android:id="@+id/progressIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_spacing"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/usernameInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/half_spacing"
                android:hint="@string/username"
                app:startIconDrawable="@drawable/outline_person">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/usernameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textVisiblePassword|textNoSuggestions" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/confirm_change_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_56dp"
                android:layout_marginTop="@dimen/standard_spacing"
                android:text="@string/change"
                android:enabled="false" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>