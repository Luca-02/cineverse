<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_watchlist_nav_graph"
    app:startDestination="@id/userWatchlistFragment">

    <fragment
        android:id="@+id/userWatchlistFragment"
        android:name="com.example.cineverse.view.user_watchlist.fragment.UserWatchlistFragment"
        android:label="fragment_user_watchlist"
        tools:layout="@layout/fragment_user_watchlist" />

    <activity
        android:id="@+id/networkErrorActivity"
        android:name="com.example.cineverse.view.network_error.NetworkErrorActivity"
        android:label="activity_network_error"
        tools:layout="@layout/activity_network_error" />
    <activity
        android:id="@+id/contentDetailsActivity"
        android:name="com.example.cineverse.view.details.ContentDetailsActivity"
        android:label="activity_content_details"
        tools:layout="@layout/activity_content_details" />

    <action
        android:id="@+id/action_global_networkErrorActivity"
        app:destination="@id/networkErrorActivity" />
    <action
        android:id="@+id/action_global_contentDetailsActivity"
        app:destination="@id/contentDetailsActivity" />
</navigation>