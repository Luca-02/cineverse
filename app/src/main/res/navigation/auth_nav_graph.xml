<?xml version="1.0" encoding="utf-8"?>
 <navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.cineverse.View.Auth.Fragment.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/action_authFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_authFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.cineverse.View.Auth.Fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_loginFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.cineverse.View.Auth.Fragment.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.cineverse.View.Auth.Fragment.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password">
        <action
            android:id="@+id/action_forgotPasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>

    <activity
        android:id="@+id/networkErrorActivity"
        android:name="com.example.cineverse.View.NetworkError.NetworkErrorActivity"
        android:label="NetworkErrorActivity"
        tools:layout="@layout/activity_network_error" />
    <activity
        android:id="@+id/verifyEmailActivity"
        android:name="com.example.cineverse.View.VerifyEmail.VerifyEmailActivity"
        android:label="VerifyEmailActivity"
        tools:layout="@layout/activity_verify_email" />
    <activity
        android:id="@+id/homeActivity"
        android:name="com.example.cineverse.View.Home.HomeActivity"
        android:label="activity_home"
        tools:layout="@layout/activity_home" />

    <action
        android:id="@+id/action_global_networkErrorActivity"
        app:destination="@id/networkErrorActivity" />
    <action
        android:id="@+id/action_global_verifyEmailActivity"
        app:destination="@id/verifyEmailActivity"
        app:popUpTo="@id/auth_nav_graph"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_global_homeActivity"
        app:destination="@id/homeActivity"
        app:popUpTo="@id/auth_nav_graph"
        app:popUpToInclusive="true" />
</navigation>