<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/verify_account_nav_graph"
    app:startDestination="@id/verifyAccountFragment">

    <fragment
        android:id="@+id/verifyAccountFragment"
        android:name="com.example.cineverse.view.verify_account.fragment.VerifyAccountFragment"
        android:label="fragment_verify_account"
        tools:layout="@layout/fragment_verify_account" />

    <activity
        android:id="@+id/networkErrorActivity"
        android:name="com.example.cineverse.view.network_error.NetworkErrorActivity"
        android:label="activity_network_error"
        tools:layout="@layout/activity_network_error" />
    <activity
        android:id="@+id/verifiedAccountActivity"
        android:name="com.example.cineverse.view.verified_account.VerifiedAccountActivity"
        android:label="activity_email_verified"
        tools:layout="@layout/activity_verified_account" />
    <activity
        android:id="@+id/authActivity"
        android:name="com.example.cineverse.view.auth.AuthActivity"
        android:label="activity_auth"
        tools:layout="@layout/activity_auth" />

    <action
        android:id="@+id/action_global_networkErrorActivity"
        app:destination="@id/networkErrorActivity" />
    <action
        android:id="@+id/action_global_verifiedAccountActivity"
        app:destination="@id/verifiedAccountActivity"
        app:popUpTo="@id/verify_account_nav_graph"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_global_authActivity"
        app:destination="@id/authActivity"
        app:popUpTo="@id/verify_account_nav_graph"
        app:popUpToInclusive="true" />
</navigation>